♦ LINEAR QUEUE 




#include <stdio.h>
#define MAX 5

int queue[MAX];
int front = -1;
int rear = -1;
 
void enqueue(int item) {
    if (rear == MAX - 1) {
        printf("Queue Overflow!\n");
    } else {
        rear = rear + 1;
        queue[rear] = item;
        printf("%d inserted into queue\n", item);
    }
}

void dequeue() {
    if (front == rear) {
        printf("Queue Underflow!\n");
    } else {
        front = front + 1;
        printf("%d deleted from queue\n", queue[front]);
    }
}

void display() {
    if (front == rear) {
        printf("Queue is empty\n");
    } else {
        printf("Queue elements: ");
        for (int i = front + 1; i <= rear; i++) {
            printf("%d ", queue[i]);
        }
        printf("\n");
    }
}

int main() {
    int choice, item;

    while (1) {
        printf("\n--- LINEAR QUEUE MENU ---\n");
        printf("1. Enqueue\n");
        printf("2. Dequeue\n");
        printf("3. Display\n");
        printf("4. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch (choice) {
        case 1:
            printf("Enter item: ");
            scanf("%d", &item);
            enqueue(item);
            break;

        case 2:
            dequeue();
            break;

        case 3:
            display();
            break;

        case 4:
            return 0;

        default:
            printf("Invalid choice! Try again.\n");
        }
    }
}
